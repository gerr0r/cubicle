<h1>Delete Cube</h1>
<div class="form">
  <form action='/' method="">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{cube.name}}" disabled="true" />
    <label for="name">Description</label>
    <textarea id="name" name="description" disabled="true" />{{cube.description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="image" value="{{cube.image}}" disabled="true" />
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="level" value="{{level}}" disabled="true" />
    {{#select cube.level}}
      <option value="1">1 - Very Easy</option>
      <option value="2">2 - Easy</option>
      <option value="3">3 - Medium (Standard 3x3)</option>
      <option value="4">4 - Intermediate</option>
      <option value="5">5 - Expert</option>
      <option value="6">6 - Hardcore</option>
    </select>
    {{/select}}
    <input type="submit" value="Delete">
  </form>
</div>