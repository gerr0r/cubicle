<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.image}}">
<div class="details">
  <p><span>Description:</span>{{cube.description}}</p>
  <p><span>Difficulty level:</span> {{cube.level}}</p>
  <a class="btn" href="/">Back</a>
  {{#if isCreator}}
  <a class="btn" href="/attach/accessory/{{cube._id}}">Attach</a>
  <a class="btn" href="/edit">Edit</a>
  <a class="btn" href="/delete">Delete</a>
  {{/if}}
</div>

<h2>Accessories</h2>
<div class="accessories">
  {{#each accessories}}
  <div class="accessory">
    <img src="{{image}}" alt="{{name}}">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
  </div>
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/each}}
</div>